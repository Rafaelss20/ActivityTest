{{>nav}}
<div>
    <h1>{{msg}}</h1>
    {{#each itens}}
    <div>
        <h3>{{product.name}}</h3>
        <img src="/img/Produtos/{{product.img}}" alt="">
        <p>Descrição: {{product.description}}</p>
        <p>Valor uniátio: {{product.value}}</p>
        <p>Quantidade: {{quantidade}}</p>
        <p>SubTotal: {{subTota}}</p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <button type="button" id="menos" onclick="less()">-</button><input type="number" name="numero" id="num"
                    oninput="Num()" value="{{quantidade}}"><button type="button" id="mais" onclick="more()">+</button>
            </div>
        </div>
    </div>
    {{/each}}
</div>
<div>
<h1>Total:</h1>
<button type="button"> <a href="/Buy">Finalizar Compra</a></button>
    {{!-- Total: <span value="total()"></span> --}}
</div>
<script>
    function less() {
        let number = getValue()
        number--;
        setValue(number)
    }
    function more() {
        let number = getValue()
        number++;
        setValue(number)
    }
    function setValue(value) {
        document.getElementById('num').value = value;
    }
    function getValue() {
        return document.getElementById('num').value;
    }
</script>
